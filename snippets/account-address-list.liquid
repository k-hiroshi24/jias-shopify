{% comment %}
  @param address {Object}
    Object containing address items
{% endcomment %}

<ul class="account-address-list">
  <li>{{ address.last_name }} {{ address.first_name }}</li>
  {% if address.company != blank %}
    <li>{{ address.company }}</li>
  {% endif %}
  {% if address.country != blank %}
    <li>{{ address.country }}</li>
  {% endif %}
  {% if address.zip != blank %}
    <li>ã€’{{ address.zip }}</li>
  {% endif %}
  {% if address.city != blank or address.province != blank %}
    <li>
      {% if address.province %}{{ address.province }}{% endif %}{{ address.city }}
    </li>
  {% endif %}
  {% if address.address1 != blank %}
    <li>{{ address.address1 }}</li>
  {% endif %}
  {% if address.address2 != blank %}
    <li>{{ address.address2 }}</li>
  {% endif %}
  {% if address.phone != blank %}
    <li>{{ address.phone }}</li>
  {% endif %}
</ul>
